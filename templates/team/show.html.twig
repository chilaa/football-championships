{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ team.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ team.Name }}</td>
        </tr>
        <tr>
            <th>Championships</th>
            <td>
                <ul>
                    {% for championship in team.championship %}
                        <li>
                            {{ championship.name }}
                        </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>Players</th>
            <td>
                <ul>
                    {% for player in team.players %}
                        <li>
                            {{ player.name ~ ' ' ~ player.surname }}
                        </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_team_index') }}">back to list</a>

    <a class="btn btn-primary" href="{{ path('app_team_edit', {'id': team.id}) }}">edit</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
